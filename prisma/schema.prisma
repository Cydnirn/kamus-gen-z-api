generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Words {
  id Int @id @default(autoincrement())
  word String @unique
  wordDescriptions WordsDescription[]
  @@map("dictionaries")
}

model WordsDescription{
  id Int @id @default(autoincrement())
  word Words @relation(fields: [wordId], references: [id])
  wordId Int @map("word_id")
  description String

  @@map("words_descriptions")
}

model User{
  id Int @id @default(autoincrement())
  username String
  email String
  password String
  fullname String

  @@map("users")
}
