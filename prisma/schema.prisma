generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Words {
  id              Int    @id @default(autoincrement())
  word            String @unique
  wordDescription String @map("word_description")

  @@map("dictionaries")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String
  password String
  fullname String

  @@map("users")
}
